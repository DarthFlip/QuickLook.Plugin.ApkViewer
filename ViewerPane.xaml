<UserControl x:Name="ViewerPanel" x:Class="QuickLook.Plugin.ApkViewer.ViewerPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource MainWindowBackground}"
             mc:Ignorable="d" d:DesignWidth="450" FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/QuickLook.Common;component/Styles/MainWindowStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="CommonStyle" TargetType="Control">
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}"/>
            </Style>

            <Style x:Key="StaticLabel" TargetType="Label" BasedOn="{StaticResource CommonStyle}">
                <Setter Property="Width" Value="130"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="SelectableLabel" TargetType="TextBox" BasedOn="{StaticResource CommonStyle}">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="SelectionBrush" Value="#007BFF"/>
                <Setter Property="SelectionOpacity" Value="0.3"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="TextWrapping" Value="NoWrap"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>

            <Style x:Key="HoverableLabel" TargetType="TextBox" BasedOn="{StaticResource SelectableLabel}">
                <Setter Property="Width" Value="Auto" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource CaptionButtonHoverBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource CaptionButtonIconForeground}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <BitmapImage x:Key="DefaultIcon"  UriSource="images/default_icon.png"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Image x:Name="image" Source="{StaticResource DefaultIcon}"
                   Cursor="Hand" Height="210" Width="210" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>

        <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="5,0,10,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <!-- Label column -->
                <ColumnDefinition Width="*"/>
                <!-- TextBox column -->
                <ColumnDefinition Width="Auto"/>
                <!-- Copy button column -->
            </Grid.ColumnDefinitions>

            <!-- Application Name -->
            <Label Grid.Row="0" Grid.Column="0" Content="Application name:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbAppName" Grid.Row="0" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="0" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbAppName, Path=Text}" />

            <!-- Package Name -->
            <Label Grid.Row="1" Grid.Column="0" Content="Package name:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbPckName" Grid.Row="1" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="1" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbPckName, Path=Text}" />

            <!-- Version Name -->
            <Label Grid.Row="2" Grid.Column="0" Content="Version name:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbVerName" Grid.Row="2" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="2" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbVerName, Path=Text}" />

            <!-- Version Code -->
            <Label Grid.Row="3" Grid.Column="0" Content="Version code:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbVerCode" Grid.Row="3" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="3" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbVerCode, Path=Text}" />

            <!-- Min SDK -->
            <Label Grid.Row="4" Grid.Column="0" Content="Min SDK:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbMinSDK" Grid.Row="4" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="4" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbMinSDK, Path=Text}" />

            <!-- Target SDK -->
            <Label Grid.Row="5" Grid.Column="0" Content="Target SDK:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbTargetSDK" Grid.Row="5" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="5" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbTargetSDK, Path=Text}" />

            <!-- Support Screens -->
            <Label Grid.Row="6" Grid.Column="0" Content="Support screens:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbSupportScr" Grid.Row="6" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="6" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbSupportScr, Path=Text}" />

            <!-- Support ABIs -->
            <Label x:Name="lbAbis" Grid.Row="7" Grid.Column="0" Content="Support ABIs:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbAbis" Grid.Row="7" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button x:Name="cpAbis" Grid.Row="7" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbAbis, Path=Text}" />

            <!-- Package Size -->
            <Label Grid.Row="8" Grid.Column="0" Content="Package size:" Style="{StaticResource StaticLabel}" />
            <TextBox x:Name="tbPckSize" Grid.Row="8" Grid.Column="1" Style="{StaticResource SelectableLabel}" 
      Text="..." MouseDoubleClick="SelectableLabel_MouseDoubleClick" />
            <Button Grid.Row="8" Grid.Column="2" Content="⧉" ToolTip="Copy" Padding="2" Margin="5,0,0,0"
     VerticalAlignment="Center" Click="CopyField_Click" Tag="{Binding ElementName=tbPckSize, Path=Text}" />
        </Grid>

        <Image x:Name="btnSwTheme" Height="20" Width="20" Margin="10"
               Cursor="Hand" ToolTip="Switch theme" Grid.Column="3"
               HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=ViewerPanel,Path=Theme}" Value="Light">
                            <!-- Black image on light theme -->
                            <Setter Property="Image.Source">
                                <Setter.Value>
                                    <BitmapImage UriSource="images/black_btn.png" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=ViewerPanel,Path=Theme}" Value="Dark">
                            <Setter Property="Image.Source">
                                <Setter.Value>
                                    <BitmapImage UriSource="images/white_btn.png" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

        <GroupBox x:Name="panelPermission" Header="Permissions" VerticalAlignment="Top"
                  BorderBrush="{DynamicResource WindowTextForeground}" 
                  Foreground="{DynamicResource WindowTextForeground}" 
                  BorderThickness="1" Margin="10" Height="150" 
                  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4">
            <ScrollViewer Focusable="False">
                <StackPanel x:Name="permissionStack"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>